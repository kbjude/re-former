<h1>The Users</h1>

<%= form_for @user do |form| %>
    <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <%= form.label :username %>
    <%= form.text_field :username %> <br><br>
    <%= form.label :email %>
    <%= form.text_field :email %><br><br>
    <%= form.label :password %>
    <%= form.password_field :password %> <br><br>
    <%= form.submit %>
<% end %>